<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JGomezcoelloExamenProgreso2.JGomezcoelloRecarga"
             Title="Recarga">
    <StackLayout Padding="20" Spacing="20">

        
        <Label x:Name="jgomezcoello_labelTelefono" Text="Ingrese el número de teléfono:" FontAttributes="Bold" />
        <Entry x:Name="jgomezcoello_entryTelefono" T Placeholder="1234567891" Keyboard="Numeric" />

        
        <Label x:Name="jgomezcoello_labelNombre" Text="Ingrese el nombre de quien realiza la recarga:" FontAttributes="Bold" />
        <Entry x:Name="jgomezcoello_entryNombre"  Placeholder="Nombre...." />

       
        <Label x:Name="jgomezcoello_labelUltimaRecarga"  FontAttributes="Italic" />

        
        <Button x:Name="jgomezcoello_btnRecargar" Text="Recargar" Clicked="Recargar_Clicked" BackgroundColor="Black" TextColor="Red" />

    </StackLayout>
</ContentPage>
